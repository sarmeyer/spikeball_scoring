extends layout

block content
  h1 Current Team Standings
  div
  table.table.table-hover.table-bordered 
    thead
      tr
        th Team name
        th Record (Wins:Losses)
        th Point Differential
        th Win Percentage
        th Total Points
    tbody
      each team in teams
        tr
          td 
            a(href='/teams/#{team.id}') #{team.teamName}
          td #{team.stats[0].wins} : #{team.stats[0].losses}
          td #{team.stats[0].pointDiff}
          if team.stats[0].wins > 0
            td #{(team.stats[0].wins/(team.stats[0].wins + team.stats[0].losses)*100).toFixed()}%
          else
            td 0%
          td #{team.stats[0].pointsFor + team.stats[0].pointsAgainst}
      a.btn.btn-primary(href="/" class='backBtn') Back

            
